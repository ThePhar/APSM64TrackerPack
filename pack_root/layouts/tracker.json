{
    "$schema": "https://poptracker.github.io/schema/packs/strict/layouts.json",
    "tracker_default": {
        "type": "container",
        "background": "#000000",
        "content": {
            "type": "dock",
            "dropshadow": true,
            "content": [
                {
                    "type": "dock",
                    "dock": "bottom",
                    "content": [
                        {
                            "type": "group",
                            "header": "Items",
                            "dock": "left",
                            "margin": "0, 0, 3, 0",
                            "content": {
                                "type": "layout",
                                "h_alignment": "center",
                                "v_alignment": "center",
                                "key": "items_grid"
                            }
                        },
                        {
                            "type": "group",
                            "header": "Entrances",
                            "dock": "left",
                            "margin": "0, 0, 3, 0",
                            "content": {
                                "type": "layout",
                                "h_alignment": "center",
                                "v_alignment": "center",
                                "key": "entrances_grid"
                            }
                        },
                        {
                            "type": "array",
                            "dock": "left",
                            "content": {
                                "type": "layout",
                                "h_alignment": "center",
                                "v_alignment": "center",
                                "key": "settings_grid"
                            }
                        }
                    ]
                },
                {
                    "type": "tabbed",
                    "tabs": [
                        {
                            "title": "Castle Interior & Entrances",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "map_castle"
                                ]
                            }
                        },
//                        { "title": "Main Courses" },
//                        { "title": "Bowser Stages" },
//                        { "title": "Secret Levels" }
                    ]
                }
            ]
        }
    }
}
