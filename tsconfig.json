{
    "compilerOptions": {
        "rootDir": ".",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true
    },
    "exclude": ["node_modules", "build", "eslint.config.mjs"]
}
